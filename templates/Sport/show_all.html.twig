{% extends "base.html.twig" %}

{% block title %}Sporty{% endblock %}

{% block body %}
<h1>Sporty</h1>
    <div class="row py-5">
        <div class="offset-md-4 col-md-4 col-sm-12">
            <table class="table">
                <tbody>
                {% for sport in sports %}
                    <tr>
                        <td>
                            {{ sport.name }}
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Action buttons">
                                <a href="{{ path('app_updateSport', { 'id': sport.id }) }}" class="btn btn-outline-primary btn-sm">Upravit</a>
                                <a href="{{ path('app_deleteSport', { 'id': sport.id }) }}" class="btn btn-outline-danger btn-sm">Smazat</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="offset-md-4 col-md-4 col-sm-12">
            <a href="{{ path('app_createSport') }}" class="btn btn-success">Nový sport</a>
            <a href="{{ path('app_showAllReservations') }}" class="btn btn-primary">Zpět na přehled</a>
        </div>
    </div>
{% endblock %}
